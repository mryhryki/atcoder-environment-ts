{
  "name": "atcoder-environment-ts",
  "private": true,
  "author": "Moriya Hiroyuki (mryhryki)",
  "license": "MIT",
  "version": "0.1.0",
  "description": "AtCoder coding environment by TypeScript",
  "scripts": {
    "dev": "nodemon --watch ./ --ext ts --exec 'npm run exec'",
    "exec": "esbuild --platform=node --external:node:* --bundle --minify ./index.ts | node",
    "lint": "mryhryki-lint",
    "lint:fix": "mryhryki-lint-fix",
    "type": "tsc",
    "type:watch": "tsc --watch"
  },
  "dependencies": {
    "@mryhryki/lint": "^0.0.6",
    "@types/node": "^17.0.25",
    "esbuild": "^0.14.38",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  }
}
